<h1>forgot your password</h1>
<%= form_with url: edit_password_reset_path do |form| %>
<div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email , class: "form-control", placeholder: "enter email" %>
</div>

<div class="mb-3">
    <%= form.submit "reset your password" ,class: "btn btn-primary"%>
</div>
<% end %>