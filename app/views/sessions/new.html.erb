<h1>Sign In</h1>
<%= form_with model: @user ,url: sign_in_path do |form| %>
<% if @user && @user.errors.any? %>
    <div class="alert alert-danger">
    <% @user.errors.full_messages.each do |msg| %>
        <div><%= msg %></div>
    <% end %>
    </div>
<% end %>
<div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email , class: "form-control", placeholder: "enter email" %>
</div>
<div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password ,class: "form-control",placeholder: "enter password" %>
    <%= link_to "forgot password", edit_password_reset_path%>
</div>

<div class="mb-3">
    <%= form.submit "Sign in", class: "btn btn-primary"%>
</div>
<% end %>